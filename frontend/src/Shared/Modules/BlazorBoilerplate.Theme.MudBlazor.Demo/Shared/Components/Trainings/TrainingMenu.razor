@inject IStringLocalizer<Global> L
@inject NavigationManager NavManager


@if (Model != null)
{
    <MudMenu Icon="@Icons.Material.Filled.MoreVert">
        <MudMenuItem OnClick="@(e => { NavManager.NavigateTo("trainings/" + TrainingId + "/models/" + Model.Id); })">@L["Details"]</MudMenuItem>
        <MudMenuItem>@L["Delete"]</MudMenuItem>
    </MudMenu>
}

@code {
    [Parameter]
    public string TrainingId { get; set; }
    [Parameter]
    public ModelDto Model { get; set; }

}

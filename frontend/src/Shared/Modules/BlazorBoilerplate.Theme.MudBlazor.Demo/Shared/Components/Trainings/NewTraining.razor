@inject IStringLocalizer<Global> L
@inject IApiClient apiClient
@inject IViewNotifier viewNotifier
@inject NavigationManager NavManager

<MudCard Elevation="5">
    <MudCardHeader Style="border-bottom-style: inset; border-bottom-width: 1px;">
        <CardHeaderContent >
            <MudText Typo="Typo.h6">@L["New Training"]</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudPaper Height="6.25rem" Elevation="0">
            @if (Dataset == null)
            {
                <DataLoaderSpinner />
            }
            else
            {
        <ButtonTooltip Text="Click here to initiate a new training sessions." Position="Placement.Top">
            <MudContainer>

                <MudButton OnClick="@(e => { NavManager.NavigateTo("/datasets/" + Dataset.Dataset.Id + "/train"); })"
                           Variant="Variant.Filled"
                           StartIcon="@Icons.Filled.ModelTraining"
                           Color="Color.Secondary" Style="width:16.3rem; align-self:center">
                    @L["Start Training"]
                </MudButton>

            </MudContainer>
        </ButtonTooltip>
            }
        </MudPaper>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public GetDatasetResponseDto Dataset { get; set; }
}

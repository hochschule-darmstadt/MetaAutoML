@inject IStringLocalizer<Global> L

<span>
    <MudTooltip Text=@Text Placement=Position Arrow="true" ShowOnHover="@ShowOnHover">
        <ChildContent>@ChildContent</ChildContent>
        <TooltipContent>
            <MudText Style="word-wrap: break-word;max-width: 20rem;font-size:11pt;">
                @Text
                @if (!string.IsNullOrEmpty(URL))
                {
                    <MudLink Href="@URL" Class="mud-tooltip mud-tooltip-default tooltiptext" Style="opacity: 100% !important; color: white !important; font-size: 11pt;">
                        More...
                    </MudLink>
                }
            </MudText>
        </TooltipContent>
     
    </MudTooltip>
</span>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public Placement Position { get; set; }
    [Parameter]
    public Boolean ShowOnHover { get; set; } = true;
    [Parameter]
    public string URL { get; set; } = "";

}


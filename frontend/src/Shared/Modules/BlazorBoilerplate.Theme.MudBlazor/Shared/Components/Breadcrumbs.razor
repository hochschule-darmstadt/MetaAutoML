<CascadingValue Value="this">
    <ul class="breadcrumb">
        @for (int i = 0; i < Items.Count; ++i)
        {
            <li>
                @if (i == Items.Count - 1)
                {
                    @Items[i].Title
                }
                else
                {
                    <a href="@Items[i].Link">
                        <MudIcon Icon="@Items[i].Icon" Style="font-size: 0.75rem" Size="Size.Small" />
                        @Items[i].Title
                    </a>
                }
            </li>
        }
        @ChildContent
    </ul>
</CascadingValue>
